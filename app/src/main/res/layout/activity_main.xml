<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.zomadmin.imagefilter.MyView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:id="@+id/view1" />

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fillViewport="false"
        android:id="@+id/hscroll1"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:contentDescription="Image"
                android:src="@drawable/sample_opt"
                android:id="@+id/imageView1" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:contentDescription="Image"
                android:src="@drawable/sample_country"
                android:id="@+id/imageView2" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:contentDescription="Image"
                android:src="@drawable/sample_gb"
                android:id="@+id/imageView3" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:contentDescription="Image"
                android:src="@drawable/sample_mb"
                android:id="@+id/imageView4" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:contentDescription="Image"
                android:src="@drawable/sample_gs"
                android:id="@+id/imageView5" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:contentDescription="Image"
                android:src="@drawable/sample_gc"
                android:id="@+id/imageView6" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:contentDescription="Image"
                android:src="@drawable/sample_fr"
                android:id="@+id/imageView7" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:contentDescription="Image"
                android:src="@drawable/sample_tint"
                android:id="@+id/imageView8" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:contentDescription="Image"
                android:src="@drawable/sample_vg"
                android:id="@+id/imageView9" />

            </LinearLayout>

    </HorizontalScrollView>


</RelativeLayout>
